#code-review-widget(ng-controller='ReviewController as rwCtrl' md-theme='reviewWidget')
	md-card.md-whiteframe-z3
		md-toolbar.md-primary
			.md-toolbar-tools
				h2.md-flex Code review requests
		md-select(ng-model='rwCtrl.period.value' aria-label='select period')
			md-option(ng-repeat='period in rwCtrl.periods' value='{{period.value}}') {{period.text}}
		md-content
			.list-item(ng-repeat='request in rwCtrl.upcoming[rwCtrl.period.value]')
				.item-content
					img.avatar(ng-src='{{request.user.avatar}}' alt='avatar')
					.info
						b Title: 
						| {{request.title}}
						br
						b Author: 
						| {{request.user.first_name}} {{request.user.last_name}}
						br
						b Group: 
						| {{request.group.title}}
						br
						b Coming: 
						| {{request.date_review}}
					.controls
						md-button.md-raised.md-primary(ng-if='!rwCtrl.getRequestStatus(request)') Send offer
						md-button.md-raised.md-warn(ng-if='rwCtrl.getRequestStatus(request)') Cancel offer
						md-button.md-raised Details
				md-divider(ng-if='!$last')