#news-viev
	width 100%
	margin 0 auto
*
	padding 0
	margin 0

body
	font 0.8em Arial, Helvetica, sans-serif
	background #D7E1F2
	color #313131

a
	color #313131
	margin-left 10px
	cursor pointer

i
	cursor pointer
header
	font-size 2.2em
	text-align center
	padding 5px
	background #1e88e5
	span
		margin-left 200px
		color #fff

nav, aside
	width 380px
	padding 5px
	padding-left 15px

#content
	margin 0 370px
	padding 10px
	height 100%
	& > .news-massage
		&:first-child
			margin-top 10px
	.news
			margin 20px auto
			width 95%
			.title
				padding 10px
				background #bbdefb
				color #1e88e5
				font-size 1.5em
			.delete-post
				color #e57373
				float right
			.body
				padding 10px
				img
					float left
					margin-right 10px
					border 2px solid white
					outline 1px solid #bdbdbd
			.footer
				border-top 1px solid #e0e0e0
				padding 10px
				background #f5f5f5
				margin-top 20px
				.likes,.comments-count
					float right
					cursor pointer
				.comments-count
					margin-left 10px
			.comments
				padding 10px
				.comment, button
					margin-top 10px

				
					.body, .footer
						padding 0

aside
	float right
	color #000

.news-massage
	width 95%
	margin 20px auto
	box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
	img
		float left
		margin 5px 10px 5px 0
	h3
		margin 0 0 5px 0

form
	padding 10px

input
	&.form-control
		width 200px

.search
	width 90%
	margin auto
	margin-top 15px
	button
		float right
		margin-top -35px

#user-log
	float right
	margin-right 20px
	span
		color #fff
		font 0.6em Arial, Helvetica, sans-serif
		margin 0 10px

#scroll-block
	margin-top 10px
	max-height 600px
	overflow-y auto

.btn-warning
	margin-left 10px
.form-group
	textarea
		margin-top 10px
.comment-wrap
	max-height 295px
	overflow-y auto
	.comment
		background #EBE9F7
		border-top 1px solid #e0e0e0
		padding 10px
		margin-top 20px
		.fa-thumbs-o-up
			float right
.tabs
	div
		background #D2D1FF
		display inline-block
		cursor pointer
		width 50%
		font-size 2em
		text-align center
		padding 5px
.sandbox
	border-left 1px solid #e0e0e0