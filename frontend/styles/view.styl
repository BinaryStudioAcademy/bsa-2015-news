#news-viev
	width 100%
	margin 0 auto
*
	padding 0
	margin 0

body
	font 0.8em Arial, Helvetica, sans-serif
	background #D7E1F2
	color #313131

a
	color #313131
	margin-left 10px
	cursor pointer

i
	cursor pointer
header
	font-size 2.2em
	text-align center
	padding 5px
	background #1e88e5
	span
		margin-left 200px
		color #fff

nav, aside
	width 380px
	padding 5px
	padding-left 15px

#content
	margin 0 370px
	padding 10px
	height 100%
	& > .news-massage
		&:first-child
			margin-top 10px
	.news
			width 100%
			max-height 600px
			overflow-y auto
			.title
				padding 10px
				background #2196f3 
				color #e3f2fd 
				font-size 1.5em
			.delete-post
				color #e57373
				float right
				margin-top -10px
			.body
				padding 10px
				.fa
					float right
				
			.footer
				border-top 1px solid #e0e0e0
				padding 10px 
				background #f5f5f5
				margin-top 10px
				.comments-count
					margin-top -15px
					float right
					cursor pointer
					margin-left 10px
			.comments
				padding 10px
				.comment, button
					margin-top 5px

					.body, .footer
						padding 0

aside#right
	float right
	color #000

aside#left
	float left
	color #000

.news-message
	margin 20px auto
	box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
	img
		float left
		margin 5px 10px 5px 0
	h3
		margin 0 0 5px 0

form
	padding 10px

input
	&.form-control
		width 200px

.search
	width 90%
	margin auto
	margin-top 15px
	button
		float right
		margin-top -60px

#user-log
	float right
	margin-right 20px
	span
		color #fff
		font 0.6em Arial, Helvetica, sans-serif
		margin 0 10px

.btn-warning
	margin-left 10px

textarea
	margin-top 10px
.comment-wrap
	margin-top 5px
	max-height 295px
	overflow-y auto
	.comment
		background #EBE9F7
		border-top 1px solid #e0e0e0
		padding 10px
		margin-top 10px
		.right-thumb
			float right
			margin-top -10px !important
.tabs
	div
		background #D2D1FF
		display inline-block
		cursor pointer
		width 50%
		font-size 2em
		text-align center
		padding 5px
.fa
	color #1976d2
.fa-comment-o
	padding-left 10px
.form-group
	input
		margin-bottom 15px
.mce-flow-layout 
	background #eceff1 !important
.mce-btn
	button
		background #eceff1 !important
.mce-menubar,.mce-panel 
	border-color #eceff1 !important

md-input-container
	width 200px
md-icon
	margin 13px
.md-create
	color #76ff03
.md-cancel
	color #ffa726
md-tooltip 
	margin-top -10px
#content 
	.news 
		.body 
			img
				float none
#sandbox
	.title
		background #9c27b0 !important
		color #e3f2fd  !important
	.fa
		color #890DBC
	.avatar
		height 40px
		margin -5px 10px 0 -5px
	.search
		margin-top 0
	.btn-comment
		background #d500f9
		color #fff
		