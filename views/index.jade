extends ./layout.jade

block content
	#news-viev
		header#header
		aside#left
			code-review-widget
			expense-widget
		ul.mobile-aside
			li
				i.fa.fa-sticky-note-o
				div
					poll-widget
			li
				i.fa.fa-users
				div
					hr-widget
			li
				i.fa.fa-question
				div
					stack-widget
			li
				i.fa.fa-code
				div
					code-review-widget
			li
				i.fa.fa-money
				div
					expense-widget

		aside#right
			poll-widget
			hr-widget
			stack-widget
			#left-block
				code-review-widget
				expense-widget
		#content(ng-controller='NewsController as newsCtrl')
			.tabsdemoDynamicHeight
				md-content(ng-class="{showMenu: isMenuShow}")
					md-tabs(md-dynamic-height='', md-border-bottom='' md-stretch-tabs='' md-selected="newsCtrl.selectedIndex" )
						md-tab(ng-click='newsCtrl.switchTab("/company")')
							span.tabs-icon
								i.fa.fa-contao 
							span.tab-text
								| Company news
						md-tab(ng-click='newsCtrl.switchTab("/sandbox")')
							span.tabs-icon
								i.fa.fa-comments-o 
							span.tab-text
								| Sandbox
						md-tab(ng-click='newsCtrl.switchTab("/weekly")')
							span.tabs-icon
								i.fa.fa-stack-exchange 
							span.tab-text
								| Pack of news
						md-tab(ng-click='newsCtrl.switchTab("/activity")')
							span.tabs-icon
								i.fa.fa-pencil-square-o 
							span.tab-text
								| activity log
			#main(ng-view)